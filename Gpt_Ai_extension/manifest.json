{
    "manifest_version": 3,
    "name": "AI Assistant",
    "version": "1.0",
    "description": "A floating AI assistant .",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_title": "AI Assistant"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["sidebar.html", "styles.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  